block content
    div.demo
        div.logo-container.logo-container--mobile
            //- h2 FG
            svg.logo-frame-svg(height = "50px"  width = "50px")
                polyline(points="30,5 5,5 5,45 45,45, 45,19" fill="white" stroke="tomato" stroke-width="6")
                text(x="30" y="30" fill="#333" font-size="20") FG
            //- div.logo-frame.logo-frame--moblie
            //-     div.lofo-frame-add.logo-add__mobile
        div.demo__overlay
        div.demo__menu-btn
            div.demo__menu-btn-line
            div.demo__menu-btn-line
            div.demo__menu-btn-line
            div.demo__menu-btn-line.demo__menu-btn__hidden
        div.demo__menu-bg 
